<% layout("/layouts/boilerplate") -%>
    <div class="row">
        <div class="col-8 offset-2">
            <br>
            <h3>Create a New Listing</h3>
            <br>
            <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-lable">Title</label>
                    <input name="listing[title]" placeholder="Enter here" type="text" class="form-control" required />
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">This Field Must be Required</div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-lable">Discription</label>
                    <textarea name="listing[description]" placeholder="Enter here" class="form-control" required></textarea>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">This Field Must be Required</div>
                </div>
                <!-- <div class="mb-3">
                    <label for="image" class="form-lable">Image URL</label>
                    <input name="listing[image.url]" placeholder="Enter here" class="form-control" type="text" />
                </div> -->
                <div class="mb-3">
                    <label for="image" class="form-lable">Upload Image</label>
                    <input name="listing[image]" class="form-control" type="file" required />
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-lable">Price</label>
                        <input name="listing[price]" placeholder="Enter here" class="form-control" type="text" required />
                        <div class="valid-feedback">Looks good!</div>
                        <div class="invalid-feedback">This Field Must be Required</div>
                    </div>
                    <div class="mb-3 col-md-4">
                        <label for="country" class="form-lable">Country</label>
                        <input name="listing[country]" placeholder="Enter here" class="form-control" type="text" required />
                        <div class="valid-feedback">Looks good!</div>
                        <div class="invalid-feedback">This Field Must be Required</div>
                    </div>
                </div>
                <div class="mb-3">

                    <label for="location" class="form-lable">Location</label>
                    <input name="listing[location]" placeholder="Enter here" class="form-control" type="text" required />
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">This Field Must be Required</div>
                </div>
                <br>
                <button class="btn btn-dark o-btn">Add</button>
                <br><br>
            </form>
        </div>
    </div>